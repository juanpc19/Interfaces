<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ej3Tema9MVVM.MainPage">

    
    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <!--bindeo a propiedad nombreM de clsModificaPersona-->
        <Label
                Text="{Binding NombreM}"
                FontSize="Large"
                 />

        <Entry
                Text="{Binding NombreM}"
                FontSize="20"
               />

    </VerticalStackLayout>

</ContentPage>
