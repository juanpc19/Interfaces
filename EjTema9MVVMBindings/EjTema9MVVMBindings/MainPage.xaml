<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjTema9MVVMBindings.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <!--ValueChanged="updateValue"-->
            <Slider
                x:Name="slider"
                BackgroundColor="Green"
                Minimum="0" Maximum="100" 
                Value="{Binding Source={x:Reference entry},  
                       Path=Text,
                       Mode=TwoWay}" 
               />
            
            <!--label aceopta decimales-->
            <Label
                x:Name="label"
                Text="Hello, World!"
                HorizontalOptions="Center"
                FontSize="{Binding Source={x:Reference slider},  
                       Path=Value,
                       Mode=OneWay}" />
            <Entry
                x:Name="entry" 
                Text="30"
                HorizontalOptions="Center"
                Keyboard="Numeric"/>

        
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
