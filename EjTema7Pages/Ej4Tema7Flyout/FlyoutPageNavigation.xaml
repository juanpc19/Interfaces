<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ej4Tema7Flyout.FlyoutPageNavigation"
             xmlns:local="clr-namespace:Ej4Tema7Flyout.Views.MenuFlyout"
             Title="FlyoutPageNavigation">

    <!--aqui decides la pagina que sera la lateral izq (contendra las paginas de contenido y sera parte de la pagina principal)-->
    <FlyoutPage.Flyout>
        <local:FlyoutMenuPage x:Name="flyoutPage"/>
    </FlyoutPage.Flyout>

    <!--aqui decides la pagina inicial que cargara el flyout en la pagina principal-->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:ContactsPage/>
            </x:Arguments>
        </NavigationPage>

    </FlyoutPage.Detail>


</FlyoutPage>
