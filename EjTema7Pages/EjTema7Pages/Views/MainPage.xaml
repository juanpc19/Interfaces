<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjTema7Pages.Views.MainPage"
             Title="MainPage">

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="20"/>

        <Entry x:Name="entryNombre" 
            Placeholder="Nombres"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="20"/>

        <Entry x:Name="entryApellidos" 
            Placeholder="Apellidos"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="20"/>

        <Button Text="Ir a PaginaTabbed."
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="20"
            Clicked="NavToTabbedPage"/>

        <Button Text="Ir a Pagina4."
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="20"
            Clicked="NavToPage4"/>     

        <Button Text="Ir a Pagina5."
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="20"
            Clicked="NavToPage5"/>

    </VerticalStackLayout>
</ContentPage>