                <Label Text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" BackgroundColor="cyan"/>
            </Border>

            <Border Stroke="Black" StrokeThickness="2" Margin="10" Grid.Row="2">
                <ScrollView>
                    <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <FlexLayout Wrap="Wrap" Grid.Column="0" >

                        <Image Source="dotnet_bot.png" Margin="10"/>

                        <Image Source="dotnet_bot.png" Margin="10"/>

                        <Image Source="dotnet_bot.png" Margin="10"/>

                    </FlexLayout>

                        <VerticalStackLayout Grid.Column="1" Margin="10" >

                            <Border Stroke="Black" StrokeThickness="2" Margin="10">
                                <Label Text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" BackgroundColor="Orange"/>
                            </Border>

                            <Border Stroke="Black" StrokeThickness="2" Margin="10">
                                <Label Text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" BackgroundColor="orange"/>
                            </Border>

                            <Border Stroke="Black" StrokeThickness="2" Margin="10">
                                <Label Text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" BackgroundColor="orange"/>
                            </Border>

                            <Border Stroke="Black" StrokeThickness="2" Margin="10">
                                <Label Text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
                                   aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" BackgroundColor="orange"/>
                            </Border>

                        </VerticalStackLayout>

                    </Grid>
        
                </ScrollView>

            </Border>

            <Border Stroke="Black" StrokeThickness="2" Grid.Row="3" Margin="10">
                <Label Text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" BackgroundColor="LightGreen"/>
            </Border>

        </Grid>
    
    </Border>
    
</ContentPage>
