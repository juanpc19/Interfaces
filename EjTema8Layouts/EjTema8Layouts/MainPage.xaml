<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjTema8Layouts.MainPage">

    <Border Padding="30" Stroke="Purple" StrokeThickness="5" StrokeShape="RoundRectangle 30,30,0,0" >
        <StackLayout VerticalOptions="Center" Margin="10" >

            <VerticalStackLayout HorizontalOptions="Center">
                <Button Text="Boton1" BorderColor="Black" BorderWidth="5" Margin="5"/>
                <Button Text="Boton2" Margin="5"/>
                <Button Text="Boton3" Margin="5"/>
            </VerticalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Start" >
                <Label Text="Nombre." FontAttributes="Bold" Margin="0,0,20,0" VerticalOptions="Center" HorizontalOptions="Start"/>
                <Entry BackgroundColor="LightCyan" VerticalOptions="Center" MinimumWidthRequest="250"/>
            </HorizontalStackLayout>

        </StackLayout>

    </Border>

</ContentPage>
