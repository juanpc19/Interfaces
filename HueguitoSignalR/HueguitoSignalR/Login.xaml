<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HueguitoSignalR.Login"
             Title="Login"
             xmlns:hueguito="clr-namespace:HueguitoSignalR.ViewModels">

    <ContentPage.BindingContext>
        <hueguito:LoginVM/>
    </ContentPage.BindingContext>

    <VerticalStackLayout BackgroundColor="Black">

        <Entry Text="{Binding EntryJugador}" Placeholder="Nombre" WidthRequest="200" HeightRequest="50" Margin="5"/>

        <Button Command="{Binding EmpezarJuego} " />

    </VerticalStackLayout>

</ContentPage>