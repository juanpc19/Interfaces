<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjTema11APIPersonas.Views.EditPersona"
             xmlns:Qnmv="clr-namespace:EjTema11APIPersonas.ViewModels"
             Title="EditPersona">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Column="0">

            <Label Text="{Binding Persona.Id}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <Entry Text="{Binding Persona.Nombre}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <Entry Text="{Binding Persona.Apellidos}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <Entry Text="{Binding Persona.Telefono}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <Entry Text="{Binding Persona.Direccion}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <Entry Text="{Binding Persona.Foto}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <DatePicker Date="{Binding Persona.FechaNac}"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" />

            <Label Text="{Binding Persona.IdDepartamento}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <Picker ItemsSource="{Binding ListaDepartamentos}"
                    ItemDisplayBinding="{Binding Nombre}"
                    SelectedItem="{Binding DepartamentoSeleccionado}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />

            <Button Text="Guardar cambios"
                    Command="{Binding EditCommand}"
                    WidthRequest="150"
                    HeightRequest="50" />
            
