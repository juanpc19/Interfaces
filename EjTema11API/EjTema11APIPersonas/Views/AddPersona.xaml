<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjTema11APIPersonas.Views.AddPersona"
             Title="AddPersona">

    <VerticalStackLayout HorizontalOptions="Center">

        <HorizontalStackLayout>
            <Label Text="Id: "
                   VerticalOptions="Center" />
            <Entry Text="{Binding Persona.Id}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>


        <HorizontalStackLayout>
            <Label Text="Nombre: "
                   VerticalOptions="Center" />
            <Entry Text="{Binding Persona.Nombre}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Apellidos: "
                   VerticalOptions="Center" />
            <Entry Text="{Binding Persona.Apellidos}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Telefono: "
                   VerticalOptions="Center" />
            <Entry Text="{Binding Persona.Telefono}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Direccion:"
                   VerticalOptions="Center" />
            <Entry Text="{Binding Persona.Direccion}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Foto: "
                   VerticalOptions="Center" />
            <Entry Text="{Binding Persona.Foto}"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Fecha de Nacimiento: "
                   VerticalOptions="Center" />
            <DatePicker Date="{Binding Persona.FechaNac}"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Departamento: "
                   VerticalOptions="Center" />
            <Picker ItemsSource="{Binding ListaDepartamentos}"
                    ItemDisplayBinding="{Binding Nombre}"
                    SelectedItem="{Binding DepartamentoSeleccionado}"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <Button Text="Crear"
                Command="{Binding CrearCommand}"
                WidthRequest="150"
                HeightRequest="50" />

    </VerticalStackLayout>

</ContentPage>