<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ej2Tema5Controles.MainPageOtra">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Switch IsToggled="false" x:Name="interruptor1"/>

            <Switch
                x:Name="interruptor2"
                BindingContext="{x:Reference interruptor1}"
                IsToggled="{Binding IsToggled}" />

            <Button
                    x:Name="botonNav"
                    Text="navToSliders"
                    Clicked="OnClick"
                    />



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
