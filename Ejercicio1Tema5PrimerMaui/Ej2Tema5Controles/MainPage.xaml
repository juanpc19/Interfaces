<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ej2Tema5Controles.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Slider 
                Minimum="0" Maximum="1"
                x:Name="slider"/>
            
            <ProgressBar 
                x:Name="progressBar"
                BindingContext="{x:Reference slider}"
                Progress="{Binding Value}"
                />

            <Button
                x:Name="botonNav"
                Text="navToButtons"
                Clicked="OnClick"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
