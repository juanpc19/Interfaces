<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ej2Tema13.MainPage">

    <ContentPage.Resources>

        <Style TargetType="Button" x:Key="siu">

            <Setter Property="FontFamily" Value="Times New Roman" />

            <Setter Property="Padding" Value="10" />
            
            <Setter Property="Margin" Value="20" />

            <Setter Property="BackgroundColor" Value="Red" />

        </Style>

        <Style TargetType="Button" x:Key="nou" BasedOn="{StaticResource siu}">

            <Setter Property="FontFamily" Value="Times New Roman" />

            <Setter Property="Padding" Value="10" />

            <Setter Property="Margin" Value="20" />

            <Setter Property="BackgroundColor" Value="White" />

            <Setter Property="TextColor" Value="Green" />

        </Style>

    </ContentPage.Resources>

    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

        <Button
          Text="Click me"
          HorizontalOptions="Center" Style="{StaticResource siu}" />
        
        <Button
         Text="Click me"
         HorizontalOptions="Center" Style="{StaticResource siu}" />

        <Button
         Text="Click me"
         HorizontalOptions="Center" Style="{StaticResource nou}" />

    </VerticalStackLayout>


</ContentPage>
